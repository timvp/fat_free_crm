.remote
  = simple_form_for(@evaluation, :html => one_submit_only(:evaluation), :remote => true) do |f|
    = link_to_close edit_evaluation_path(@evaluation)
    = f.hidden_field :user_id

    = f.error_messages :object_name => t('evaluation')

    = render "evaluations/top_section", :f => f, :edit => true
    -#= render "evaluations/extra",       :f => f, :edit => true
    -#= render "evaluations/web",         :f => f, :edit => true
    = render "fields/groups", :f => f, :edit => true
    = render "evaluations/permissions", :f => f, :edit => true

    .buttonbar
      = f.submit t(:save_evaluation)
      #{t :or}
      = link_to_cancel edit_evaluation_path(@evaluation)

