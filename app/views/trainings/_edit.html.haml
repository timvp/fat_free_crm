.remote
  = simple_form_for(@training, :html => one_submit_only(:training), :remote => true) do |f|
    = link_to_close edit_training_path(@training)
    = f.hidden_field :user_id

    = f.error_messages :object_name => t('training')

    = render "trainings/top_section", :f => f, :edit => true
    -#= render "trainings/extra",       :f => f, :edit => true
    -#= render "trainings/web",         :f => f, :edit => true
    = render "fields/groups", :f => f, :edit => true
    = render "entities/permissions", :f => f, :entity => @training, :edit => true

    .buttonbar
      = f.submit t(:save_training)
      #{t :or}
      = link_to_cancel edit_training_path(@training)

