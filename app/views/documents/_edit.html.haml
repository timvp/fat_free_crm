.remote
  = simple_form_for(@document,:url => document_path(@document,:format => "js"), :html => { :multipart => true, :target => "uploading", :onsubmit => "$('document_submit').disabled = true" }) do |f|
    = link_to_close edit_document_path(@document)
    = f.hidden_field :user_id

    = f.error_messages :object_name => t('document')

    = render "documents/top_section", :f => f, :edit => true
    -#= render "documents/extra",       :f => f, :edit => true
    -#= render "documents/web",         :f => f, :edit => true
    -#= render "fields/groups", :f => f, :edit => true
    -#= render "documents/permissions", :f => f, :edit => true

    .buttonbar
      = f.submit t(:save_document), :id => :document_submit
      #{t :or}
      = link_to_cancel edit_document_path(@document)
      
