.remote
  = form_for(@mailinglist, :html => one_submit_only(:mailinglist), :remote => true) do |f|
    = link_to_close edit_mailinglist_path(@mailinglist)

    = f.error_messages :object_name => t('mailinglist')

    = render "mailinglists/top_section", :f => f, :edit => true
    .buttonbar
      = f.submit t(:save_mailinglist)
      #{t :or}
      = link_to_cancel edit_mailinglist_path(@mailinglist)
