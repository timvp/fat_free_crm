.remote
  = form_for(@mailing, :html => one_submit_only(:mailing), :remote => true) do |f|
    = link_to_close edit_mailing_path(@mailing)

    = f.error_messages :object_name => t('mailing')

    = render "mailings/top_section", :f => f, :edit => true
    .buttonbar
      = f.submit t(:"wijzigingen opslaan")
      #{t :or}
      = link_to_cancel edit_mailing_path(@mailing)
